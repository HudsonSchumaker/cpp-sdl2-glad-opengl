{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compile PCH",
            "command": "/usr/bin/clang++",
            "args": [
                "-x",
                "c++-header",
                "-std=c++17",
                "-I/usr/local/opt/sdl2/include",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/include/Pch.hpp",
                "-o",
                "${workspaceFolder}/build/Pch.pch"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Schumaker."
        },
        {
            "type": "cppbuild",
            "label": "clang++ build",
            "command": "/usr/bin/clang++",
            "args": [
                "-Wall",
                "-std=c++17",
                "-g",
                "-fdiagnostics-color=always",
                "-fansi-escape-codes",
                "-I/usr/local/opt/sdl2/include",
                "-I${workspaceFolder}/include",
                "-L/usr/local/opt/sdl2/lib",
                "-lSDL2",
                "-lSDL2_gfx",
                "-lSDL2_ttf", 
                "-lSDL2_image",
                "-lSDL2_mixer",
                "-include",
                "${workspaceFolder}/build/Pch",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/3d/*.cpp",
                "${workspaceFolder}/src/core/*.cpp",
                "${workspaceFolder}/src/ecs/*.cpp",
                "${workspaceFolder}/src/ecs/system/*.cpp",
                "${workspaceFolder}/src/gfx/*.cpp",
                "${workspaceFolder}/src/gfx/*.c",
                "${workspaceFolder}/src/io/*.cpp",
                "${workspaceFolder}/src/math/*.cpp",
                "${workspaceFolder}/src/sfx/*.cpp",
                "-o",
                "${workspaceFolder}/build/engine"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Schumaker."
        }
    ]
}
